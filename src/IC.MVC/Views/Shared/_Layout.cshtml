@using System.Configuration;

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Controle de Inventário", "Index", "Equipments", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Início", "Index", "Equipments")</li>
                    <li><a href="@ConfigurationManager.AppSettings["ServerRoute"]Help" target="_blank">Api</a></li>
                    @*<li>@Html.ActionLink("Api", "Api", "Equipments")</li>*@
                    <li></li>
                </ul>
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" id="txtSearch" class="form-control" placeholder="Procurar por código" onkeypress="return event.keyCode!=13">
                    </div>
                    <button type="button" id="btnSearch" class="btn btn-default">Buscar</button>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Controle de Inventário</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $("#btnSearch").click(function () {
            let codigo = $("#txtSearch").val();
            if (codigo !== '' || codigo.length > 0) {
                let link = document.createElement("a");
                link.href = '/Equipments/DetailsByCode/' + codigo;
                link.click();
            }
        });
    </script>
</body>
</html>